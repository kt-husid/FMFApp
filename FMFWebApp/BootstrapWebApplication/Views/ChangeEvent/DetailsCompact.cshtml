@model BootstrapWebApplication.Models.ChangeEvent
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>

        <dd>
            @String.Format("{0:g}", @Model.CreatedOn) @Html.DisplayFor(model => model.CreatedByUserIdCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DeletedOn)
        </dt>

        <dd>
            @String.Format("{0:g}", @Model.DeletedOn) @Html.DisplayFor(model => model.DeletedByUserIdCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedOn)
        </dt>

        <dd>
            @String.Format("{0:g}", @Model.UpdatedOn) @Html.DisplayFor(model => model.UpdatedByUserIdCode)
        </dd>
    </dl>
</div>