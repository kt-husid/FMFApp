<script>
    var progressCheck = null;

    $(function () {
        $.post("/Report/ClearReportsCache", function (d) {
            //console.log("OK");
        });
        //$("#From,#To").kendoMaskedTextBox({
        //    mask: "00" + dateSeparator + "00" + dateSeparator + "0000",
        //});
        activateDatePicker();

        ParseInputDate("#SignOnFrom, #SignOnTo");

        var memberTypeDataSource = CreateDataSource(10, "/MemberType/Find", "#MemberTypeCode");
        //var jobDataSource = CreateDataSource(10, "/Job/Find", "#JobCode");

        SetupAutoComplete($("#MemberTypeCode"), "Code", '#: data.Code# (#: data.Description#)', memberTypeDataSource, function (item) {
            $("#MemberTypeId").val(item.Id);
            $("#MemberTypeDescription").html(item.Description);
        });

        //SetupAutoComplete($("#MemberJobCodeFrom"), "Code", '#: data.Code# (#: data.Description#)', jobDataSource, function (item) {
        //    $("#MemberJobCodeFromId").val(item.Id);
        //    $("#MemberJobCodeFromDescription").html(item.Description);
        //});
        //SetupAutoComplete($("#MemberJobCodeTo"), "Code", '#: data.Code# (#: data.Description#)', jobDataSource, function (item) {
        //    $("#MemberJobCodeToId").val(item.Id);
        //    $("#MemberJobCodeToDescription").html(item.Description);
        //});


        $("#printLabelReport").click(function (e) {
            e.preventDefault();
            $('#progress').text("");
            var PostalFrom = $("#PostalFrom").val();
            var PostalTo = $("#PostalTo").val();
            var MemberTypeCode = $("#MemberTypeCode").val();
            var MemberJobCodeFrom = $("#MemberJobCodeFrom").val();
            var MemberJobCodeTo = $("#MemberJobCodeTo").val();
            var SignOnFrom = $("#SignOnFrom").val();
            var SignOnTo = $("#SignOnTo").val();
            //var FromJobCode = $("#FromJobCode").val();
            //var ToJobCode = $("#ToJobCode").val();
            
            setStatusUI("Bíða við... Hetta kann taka eina løtu... Rapportin verður víst aftaná hetta er liðugt.");
            setInputActive(false);
            
            var url = "/Member/PrintLabelReport";
            var data = JSON.stringify({
                "obj": {
                    "PostalFrom": PostalFrom,
                    "PostalTo": PostalTo,
                    "MemberTypeCode": MemberTypeCode,
                    "SignOnFrom": SignOnFrom,
                    "SignOnTo": SignOnTo,
                    "MemberJobCodeFrom": MemberJobCodeFrom,
                    "MemberJobCodeTo": MemberJobCodeTo
                    //"FromJobCode": FromJobCode,
                    //"ToJobCode": ToJobCode
                },
                "isPartialView": false,
                "type": "json"
            });
            console.log(data);
            var reportUrl = '/Member/LabelReport?PostalFrom=' + PostalFrom + '&PostalTo=' + PostalTo + '&MemberTypeCode=' + MemberTypeCode + '&MemberJobCodeFrom=' + MemberJobCodeFrom + '&MemberJobCodeTo=' + MemberJobCodeTo + '&SignOnFrom=' + SignOnFrom + '&SignOnTo=' + SignOnTo;
            $("#reportLink").html("<a target='_blank' href=" + reportUrl + ">Vís rapport</a>");
            window.open(reportUrl);
            $.ajax({
                type: "POST",
                url: url,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: data,
                success: function (result) {
                    console.log("done");
                    onFinished(result);
                },
                error: function (error) {
                    console.clear();
                    console.log("error");
                    onFinished(error);
                }
            });

            //progressCheck = setInterval(function () {
            //    getStatus(function (json) {
            //        println("get status..");
            //        console.log(json);
            //        if (json && json != null && json.ItemsDone > 0) {
            //            setStatusUI(json.ItemsDone + " / " + json.ItemsTotal + ". Time spent: " + json.TimeSpent);
            //        }
            //    }, function (error) {
            //        println("get status error!");
            //        console.log(json);
            //    });
            //}, 1000);
            return false;
        });


        var connection = $.hubConnection();
        var contosoChatHubProxy = connection.createHubProxy('messageHub');
        contosoChatHubProxy.on('broadcastProgress', function (progress) {
            $('#progress').text(progress);
        });
        connection.start()
            .done(function () { console.log('Now connected, connection ID=' + connection.id); })
            .fail(function () { console.log('Could not connect'); });


    });

    function onFinished(result) {
        console.log(result);
        //clearInterval(progressCheck);
        //setStatusUI(result.Message.length > 0 ? result.Message : "");
        if (result.Message && result.Message.length > 0) {
            getStatus(function (json) {
                if (json && json != null && json.ItemsDone > 0) {
                    setStatusUI("Eydnaðist. Dagført " + json.ItemsDone + " limir. Tók " + json.TimeSpent + " sekund.");
                }
            }, function (error) {
                setStatusUI("Feilur uppstóð");
                println("get status error!");
                console.log(json);
            });
        }
        setInputActive(true);
    }
    function setInputActive(value) {
        $("#PrintMemberLabels input, textarea, button").prop('disabled', !value);
    }

    function setStatusUI(text) {
        $("#statusMsg").html(text);
    }

    function getStatus(callbackSuccess, callbackError) {
        $.ajax({
            type: "GET",
            url: "/Member/GetTimeElapsedForLabelReportPrintJob",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                callbackSuccess(result);
            },
            error: function (error) {
                callbackError(error);
            }
        });
    }
</script>