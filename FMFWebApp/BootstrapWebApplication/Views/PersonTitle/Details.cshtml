@model BootstrapWebApplication.Models.PersonTitle

@if (!@Request.IsAjaxRequest())
{
    ViewBag.Title = @BootstrapResources.Resources.Details;
    <h2>@BootstrapResources.Resources.Details</h2>
}
<div>
    @if(!@Request.IsAjaxRequest())
    {
        <h4>@Resources.Title</h4>
        <hr />
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
@if (!@Request.IsAjaxRequest())
{
    @Html.Partial("_EditBackToListPartial", Model)
}
<script>
    $(function () {
        $(".detailsModal").click(function (e) {
            window.location = '/@ViewContext.GetControllerName()/Details/@Model.Id';
        });
    });
</script>