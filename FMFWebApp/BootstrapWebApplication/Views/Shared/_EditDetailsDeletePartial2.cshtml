@model EditDetailsDelete2Data

<div style="display:inline;">
    <input type="hidden" name="__id" data-bind="value: Id" />
    <input type="hidden" name="__title" value="@Model.Title" />
    <button data-model-name="@Model.ModelName" data-controller-name='@Model.ControllerName' class='btn btn-primary btn-xs edit-action'>@Resources.Edit</button>
    <button data-model-name="@Model.ModelName" data-controller-name='@Model.ControllerName' class='btn btn-info btn-xs details-action'>@Resources.Details</button>
    <button data-model-name="@Model.ModelName" data-controller-name='@Model.ControllerName' class='btn btn-danger btn-xs delete-action'>@Resources.Delete</button>
</div>